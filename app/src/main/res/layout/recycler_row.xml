<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
> <!-- Sarı arka plan rengi -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#c48a93"> <!-- CardView'in arka plan rengini sarı yap -->

        <TextView
            android:id="@+id/recyclerViewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Test"
            android:textColor="#F4EFEF"
            android:textSize="20sp"
            android:padding="4dp"/> <!-- İçeriğin kenarlardan boşluk bırakması için padding ekledim -->

    </androidx.cardview.widget.CardView>

</LinearLayout>
